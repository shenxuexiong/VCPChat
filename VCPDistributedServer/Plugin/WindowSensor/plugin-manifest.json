{
    "manifestVersion": "1.0.0",
    "name": "WindowSensor",
    "version": "1.0.0",
    "displayName": "窗口感知雷达",
    "description": "监控当前设备上有图形界面的活跃进程，构建防干扰的多级上下文感知视界。",
    "author": "System",
    "pluginType": "static",
    "capabilities": {
        "systemPromptPlaceholders": [
            {
                "placeholder": "{{WindowSensor_Node}}",
                "description": "当前节点的活跃窗口进程数据摘要与详情"
            }
        ]
    },
    "entryPoint": {
        "type": "executable",
        "command": "powershell.exe -ExecutionPolicy Bypass -File ./sensor.ps1"
    },
    "refreshIntervalCron": "*/3 * * * *",
    "executeOnStartup": true,
    "defaultConfig": {
        "NodeName": "主节点"
    }
}